        <receiver
            android:name=".ItemReminderReceiver"
            android:enabled="true"
            android:exported="false" />
        <activity
            android:name=".itemPackage.Confirm"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".itemPackage.ChangeItem"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".user.ChangeMessage"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".user.CompleteMessage"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Quit"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Mine"
            android:exported="false" />
        <activity
            android:name=".Timer"
            android:exported="false" />
        <activity
            android:name=".user.UserDao"
